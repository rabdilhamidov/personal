{% extends '::layout.front.html.twig' %}

{% block title %}{% trans %}Абдилхамидов Руслан. Персональный сайт.{% endtrans %}{% endblock %}

{% block bodyclass %}class="home"{% endblock %}
	
{% block content %}
	{# {{ test ? dump(test) : false }} #}
	{# {{ dump(posts) }} #}
		
	<section class="main-slider">
		<div class="content">
			<h2>{% trans %}Персональный сайт{% endtrans %}</h2>
		</div>
		<ul class="bxslider">
			{% for mainBannerImg in mainBannerImgs %}
			    <li>
			      <div class="slide">
			        <div class="img-cont">
			          {% thumbnail mainBannerImg, 'mainbanner' %}
			        </div>
			      </div>
			    </li>
			{% endfor %}
		</ul>
		<div class="controls">
		    <a href="#" class="prev"></a>
		    <a href="#" class="next"></a>
		</div>  
	</section>
	{% if posts.web %}
		<section class="chapter">
			<div class="content">
				<h3>{% trans %}Производство сайтов{% endtrans %}</h3>
				<div class="slider-1">
					<ul class="bxslider">
						{% for post in posts.web %}
							<li>
								{% include 'DemosBlogBundle:Default:figure.html.twig' with {'post': post} %}
							</li>
						{% endfor %}
					</ul>
					<div class="controls">
					    <a href="#" class="prev"></a>
					    <a href="#" class="next"></a>
					</div>
				</div>
				<div class="chapter-footer">
					<a href="{{url('demos_blog_section', {'slug1': 'web'}) }}" class="more">{% trans %}См. все{% endtrans %}</a>
				</div>
			</div>
		</section>
	{% endif %}
	{% if posts.design %}
		<section class="chapter dark">
			<div class="content">
				<h3>{% trans %}Дизайн{% endtrans %}</h3>
				<div class="slider-2">
					<ul class="bxslider">
						{% for post in posts.design %}
							<li>
								{% include 'DemosBlogBundle:Default:figure.html.twig' with {'post': post} %}
							</li>
						{% endfor %}
					</ul>
					<div class="controls">
					    <a href="#" class="prev"></a>
					    <a href="#" class="next"></a>
					</div>
				</div>
				<div class="chapter-footer">
					<a href="{{url('demos_blog_section', {'slug1': 'design'}) }}" class="more">{% trans %}См. все{% endtrans %}</a>
				</div>
			</div>
		</section>
	{% endif %}

	{% if posts.photo %}
		<section class="chapter">
			<div class="content">
				<h3>{% trans %}Фотографии{% endtrans %}</h3>
				<div class="slider-3">
					<ul class="bxslider">
						{% for post in posts.photo %}
							<li>
								{% include 'DemosBlogBundle:Default:figure.html.twig' with {'post': post} %}
							</li>
						{% endfor %}
					</ul>
					<div class="controls">
					    <a href="#" class="prev"></a>
					    <a href="#" class="next"></a>
					</div>
				</div>
				<div class="chapter-footer">
					<a href="{{url('demos_blog_section', {'slug1': 'photo'}) }}" class="more">{% trans %}См. все{% endtrans %}</a>
				</div>
			</div>
		</section>
	{% endif %}

	{% if posts.blog %}
		<section class="chapter blog">
			<div class="content">
				<h3>{% trans %}Блог{% endtrans %}</h3>
				<div class="slider-blog">
					<ul class="bxslider">
						{% for post in posts.blog %}
							<li>
								{% include 'DemosBlogBundle:Default:main_article.html.twig' with {'post': post} %}
							</li>
						{% endfor %}
					</ul>
					<div class="slider-footer">
						<div class="controls">
						    <a href="#" class="prev"></a>
						    <a href="#" class="next"></a>
						</div>
					</div>
				</div>
				<div class="chapter-footer">
					<a href="{{ url('demos_blog_blog') }}" class="more">{% trans %}См. все{% endtrans %}</a>
				</div>
			</div>
		</section>
	{% endif %}

{% endblock %}

{% block popups %}
<!-- fullscreen picture popup -->
<div class="fullscreen">
	<figure class="img-block">
		{# <img src="" alt=""> #}
	</figure>
	<div class="help">
		{% trans %}Esc или клик мыши закрывает окно.{% endtrans %}
	</div>
	<div class="border"></div>
</div>
{% endblock %}