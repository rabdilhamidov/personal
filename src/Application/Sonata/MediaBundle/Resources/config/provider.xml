<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonata.media.provider.image2.class">Application\Sonata\MediaBundle\Provider\ImageProvider2</parameter>
    </parameters>

    <services>
        <service id="sonata.media.provider.image2" class="%sonata.media.provider.image2.class%">
            <tag name="sonata.media.provider" />
            <argument>sonata.media.provider.image2</argument>
            <argument />
            <argument />
            <argument />
            <argument type="service" id="sonata.media.thumbnail.format" />
            <argument />
            <argument />
            <argument />
            <argument type="service" id="sonata.media.metadata.proxy" />

            <call method="setTemplates">
                <argument type="collection">
                    <argument key='helper_thumbnail'>SonataMediaBundle:Provider:thumbnail.html.twig</argument>
                    <argument key='helper_view'>SonataMediaBundle:Provider:view_image.html.twig</argument>
                </argument>
            </call>
        </service>

    </services>
</container>
