{% extends 'ApplicationSonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    {%- if value is empty -%}
        &nbsp;
    {%- else -%}
        {% if field_description.options.pattern is defined %}
            {% set pattern = field_description.options.pattern %}
        {% elseif field_description.options.format is defined %}
            {% set pattern = field_description.options.format %}
        {% else %}
            {% set pattern = null %}
        {% endif %}
        {% set locale = field_description.options.locale|default(null) %}
        {% set timezone = field_description.options.timezone|default(null) %}
        {% set dateType = field_description.options.dateType|default(null) %}
        {% set timeType = field_description.options.dateType|default(null) %}

        {{ value | format_datetime(pattern, locale, timezone, dateType, timeType) }}
    {%- endif -%}
{% endblock %}
